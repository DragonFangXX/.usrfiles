#!/bin/bash

dir=/tmp/build

echo Checking for build directory...
if [ ! -d $dir ]; then
	echo No build directory found. Creating build directory "$dir"...
	mkdir -pv $dir 
else
	echo Build directory exists.
fi

cd $dir
for url in "$@"; do
	echo Cloning "$url"
	git clone "$url" -v
done

for d in "$dir"/*; do
	echo "$d"
	cd "$d"
	makepkg -si
	cd "$dir"
done

echo Cleaning up...
sudo rm -rv $dir
